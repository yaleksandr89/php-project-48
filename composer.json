{
  "name": "hexlet/code",
  "description": "Difference calculator (JSON/YAML) with stylish, plain, json formatters",
  "type": "library",
  "require": {
    "php": ">=8.1",
    "symfony/yaml": "^7.0",
    "docopt/docopt": "^1.0",
    "funct/funct": "^1.6"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.5",
    "squizlabs/php_codesniffer": "^4.0"
  },
  "autoload": {
    "psr-4": {
      "Gendiff\\": "src/"
    },
    "files": [
      "src/Parsing/parse.php",
      "src/Gendiff.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Gendiff\\Tests\\": "tests/"
    }
  },
  "bin": ["bin/gendiff"],
  "scripts": {
    "test": "phpunit --colors=always"
  }
}
