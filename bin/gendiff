#!/usr/bin/env php
<?php

declare(strict_types=1);

require_once __DIR__ . '/../vendor/autoload.php';

const APP_VERSION = 'gendiff 0.1.0';

$doc = <<<DOC
Generate diff

Usage:
  gendiff (-h|--help)
  gendiff (-v|--version)
  gendiff [--format <fmt>] <firstFile> <secondFile>

Options:
  -h --help                     Show this screen
  -v --version                  Show version
  --format <fmt>                Report format [default: stylish]
DOC;

$args = Docopt::handle($doc, [
        'version' => APP_VERSION,
]);

if (isset($args['--format'])) {
    echo "Format: " . $args['--format'] . PHP_EOL;
}
if (isset($args['<firstFile>'], $args['<secondFile>'])) {
    echo "Files: " . $args['<firstFile>'] . " , " . $args['<secondFile>'] . PHP_EOL;
}
